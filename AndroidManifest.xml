<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greprubyleaveapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

   <application android:icon="@drawable/ic_launcher" android:label="@string/app_name">
        <activity android:name=".MainActivity"
                  android:label="@string/app_name" 
                  android:configChanges="orientation|keyboardHidden|keyboard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
    </activity>
	<activity android:name=".Login" />
	<activity android:name=".Signup" />
	<activity android:name=".ApplyOrCheckin" />
	<activity android:name=".ApplyLeave" android:screenOrientation="portrait"/>
	<activity android:name=".CheckinLeav" android:screenOrientation="portrait"/>
	<activity android:name=".LeaveDetail" android:screenOrientation="portrait"/>
	
    </application>
    
    <!--  Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
