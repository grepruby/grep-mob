<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/gr_image" >
    
	    <TableLayout 
	    		android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:stretchColumns="0,1"
	            android:layout_marginTop="5dp">
	    		<TableRow >
				    <ImageView
				        android:id="@+id/back"
				        android:src="@drawable/back"
				      	android:layout_gravity="left"
				        android:layout_width="65dp"
				        android:layout_height="25dp"/>
					<ImageView
				    	android:id="@+id/signout" 
				        android:layout_width="45dp"
				        android:layout_height="25dp" 
				        android:layout_gravity="right"
				        android:src="@drawable/log_out"/>
				</TableRow>  
		</TableLayout>
	
	    <LinearLayout
	        android:id="@+id/linearLayout1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="80dp"
	        android:orientation="horizontal" >
	
			       <RelativeLayout
			        android:layout_width="110dp"
			        android:layout_height="wrap_content">
			         	 <ImageView
							android:id="@+id/imgView"
							android:layout_marginTop="15dp"
							android:layout_width="75dp"
							android:layout_height="105dp"
							android:layout_marginLeft="17dp"
							android:src="@drawable/user">
					      </ImageView>
					      
					 	 <ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="0dp"
							android:src="@drawable/vector_frame">
					      </ImageView>
						  <TextView
			                     android:id="@+id/buttonLoadPicture"
			                     android:layout_width="fill_parent"
			                     android:layout_height="wrap_content"
			                     android:text="Tap to change"
			                     android:layout_marginTop="130dp"
			                     android:textSize="12sp"
			                     android:layout_marginLeft="15dp"
			                     android:autoLink="web"
			                     android:textColor="#49bbe9" />
					</RelativeLayout>
					
			        <LinearLayout
					        android:layout_width="fill_parent"
					        android:layout_height="wrap_content"
					        android:layout_marginTop="40dp"
					        android:orientation="vertical" >
						<TableLayout android:layout_width="fill_parent"
			             			 android:layout_height="wrap_content">
					        	<TableRow>
								      <TextView 
											 android:layout_width="fill_parent"
						                     android:layout_height="wrap_content"
						                     android:text="Name : "
						                     android:textStyle="bold"
						                     android:textSize="13sp"
						                     android:layout_marginLeft="10dp"
						                     android:textColor="@color/black"
						                     />
								      <TextView 
								          	android:id="@+id/name" 
											 android:layout_width="fill_parent"
						                     android:layout_height="wrap_content"
						                     android:text="Parneeti Chopda"
						                     android:textSize="13sp"
						                     android:layout_marginLeft="10dp"
						                     android:textColor="@color/black"
						                     />
					           </TableRow>
						             <ImageView
							           android:layout_width="200dp"
							           android:layout_height="5dp"
							           android:layout_marginTop="5dp"
							           android:src="@drawable/middle_row"
							          />
					          <TableRow
					               	 android:layout_width="fill_parent"
					        		 android:layout_height="wrap_content"
					        		 android:layout_marginTop="5dp">
								      <TextView 
											 android:layout_width="fill_parent"
						                     android:layout_height="wrap_content"
						                     android:text="Email : "
						                     android:textStyle="bold"
						                     android:textSize="13sp"
						                     android:layout_marginLeft="10dp"
						                     android:textColor="@color/black"
						                     />
								      <TextView 
								          	android:id="@+id/email" 
											 android:layout_width="fill_parent"
						                     android:layout_height="wrap_content"
						                     android:text="parneeti@gmail.com"
						                     android:textSize="13sp"
						                     android:layout_marginLeft="10dp"
						                     android:textColor="@color/black"
						                     />
							      
					          </TableRow>
						           <ImageView 
							           android:layout_width="200dp"
							           android:layout_height="5dp"
							           android:layout_marginTop="5dp"
							           android:src="@drawable/middle_row"
							          />
					          <TableRow
					               	 android:layout_width="fill_parent"
					        		 android:layout_height="wrap_content"
					        		 android:layout_marginTop="5dp">
								      <TextView 
											 android:layout_width="fill_parent"
						                     android:layout_height="wrap_content"
						                     android:text="Phone: "
						                     android:textStyle="bold"
						                     android:textSize="13sp"
						                     android:layout_marginLeft="10dp"
						                     android:textColor="@color/black"
						                     />
								      <TextView 
								          	 android:id="@+id/phone" 
											 android:layout_width="fill_parent"
						                     android:layout_height="wrap_content"
						                     android:text="9087654321"
						                     android:textSize="13sp"
						                     android:layout_marginLeft="10dp"
						                     android:textColor="@color/black"
						                     />
					          </TableRow>
						           <ImageView
							           android:layout_width="200dp"
							           android:layout_height="5dp"
							           android:layout_marginTop="5dp"
							           android:src="@drawable/middle_row" />
			    </TableLayout>
			</LinearLayout>
	    </LinearLayout>
	   
	    
	    <LinearLayout
			    android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="30dp"
		        android:orientation="vertical">
	        <TableLayout  android:layout_width="fill_parent"
	             		 android:layout_height="wrap_content">
	          
	          <LinearLayout 
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
				  android:orientation="horizontal"
				  android:layout_marginLeft="50dp"
	              >
			       
					     <TextView
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:textColor="@android:color/black"
			                    android:textStyle="bold"
			                    android:text="DOB : " />
					     <TextView
			                    android:id="@+id/dob"
			                    android:layout_width="80dp"
			                    android:layout_height="wrap_content"
			                    android:layout_marginLeft="10dp"
			                    android:textColor="@android:color/black"
			                    android:text="Not Set" />
			             <ImageView 
					          	android:id="@+id/edit_dob" 
								android:layout_width="30dp"
			                    android:layout_height="30dp"
			                    android:src="@drawable/edit"
			                    android:textSize="12sp"
			                    android:layout_marginLeft="103dp"
			                    />
	                     <LinearLayout 
				              android:id="@+id/linear1"
				              android:layout_width="wrap_content"
				              android:layout_height="wrap_content"
							  android:orientation="horizontal"
							  android:layout_marginBottom="3dp"
							  android:visibility="gone"
						  >
			        		  <ImageView
			                    android:id="@+id/change_dob_btn"
			                    android:layout_width="25dp"
			                    android:layout_height="25dp"
			                    android:layout_marginLeft="21dp"
			                    android:src="@drawable/calendar_icon" />
					          <ImageView
					          	 android:id="@+id/edit_save" 
								 android:layout_width="22dp"
			                     android:layout_height="25dp"
			                     android:layout_marginTop="2dp"
			                     android:layout_marginLeft="18dp"
			                     android:src="@drawable/save" />
					          <ImageView
					          	 android:id="@+id/edit_cancel" 
								 android:layout_width="25dp"
			                     android:layout_height="27dp"
			                     android:layout_marginLeft="18dp"
			                     android:src="@drawable/cancel" />
	              		</LinearLayout>
	          </LinearLayout>
	         
	             <ImageView
		           android:layout_width="320dp"
		           android:layout_height="5dp"
		           android:layout_marginTop="10dp"
		           android:src="@drawable/middle_row"
		          />
	            
	                
	          	<TableRow
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_marginTop="20dp" >
                   
				      <TextView 
							 android:layout_width="wrap_content"
		                     android:layout_height="wrap_content"
		                     android:text="Address : "
		                     android:textStyle="bold"
		                     android:textSize="13sp"
		                     android:layout_marginLeft="29dp"
		                     android:textColor="@color/black"
		                     />
				      <LinearLayout 
			              android:id="@+id/linear2"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
						  android:orientation="horizontal"
						  
						  >
					      <TextView
					          	 android:id="@+id/l_address" 
								 android:layout_width="125dp"
			                     android:layout_height="wrap_content"
			                     android:text="No Address"
			                     android:textSize="13sp"
			                     android:lines="3"
			                     android:layout_marginLeft="10dp"
			                     android:textColor="@color/black"
			                     />
					      <ImageView 
					          	 android:id="@+id/edit_local_add" 
								 android:layout_width="30dp"
			                     android:layout_height="30dp"
			                     android:layout_marginLeft="60dp"
			                     android:src="@drawable/edit"
			                     />
				  </LinearLayout>
			      <LinearLayout 
			              android:id="@+id/linear3"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
						  android:orientation="horizontal"
						  android:visibility="gone"
						  >
					          <EditText 
					             android:id="@+id/edit_address" 
								 android:layout_width="140dp"
								 android:layout_marginLeft="10dp"
			                     android:layout_height="wrap_content"
			                     android:textSize="13sp"
			                     android:background="@drawable/backwithborder"/>
					          <ImageView
					          	 android:id="@+id/edit_laddress_save" 
								 android:layout_width="22dp"
			                     android:layout_height="25dp"
			                     android:layout_marginTop="2dp"
			                     android:layout_marginLeft="10dp"
			                     android:src="@drawable/save" />
					          <ImageView
					          	 android:id="@+id/edit_laddress_cancel" 
								 android:layout_width="25dp"
			                     android:layout_height="25dp"
			                     android:layout_marginLeft="17dp"
			                     android:src="@drawable/cancel" />
	              		</LinearLayout>
	         </TableRow>
		</TableLayout>    
	</LinearLayout>
</LinearLayout>