<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gr_login_image" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical" >
			<TableLayout android:layout_width="fill_parent"
             android:layout_height="wrap_content">
        <TableRow >
        <TextView
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text="Full Name"
             android:textSize="11sp"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="25dp"
             android:textColor="@color/black" />
        <TextView
             android:id="@+id/wrong_uname"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text=" "
             android:textSize="11sp"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="20dp"
             android:textColor="#DD4B46" />
        </TableRow>    
        </TableLayout>
        	<EditText
            android:id="@+id/uname"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:inputType="textEmailAddress"
            android:hint=""
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/backwithborder"
            android:textColor="@android:color/black" >
            <requestFocus></requestFocus></EditText>
        	

        	<TableLayout android:layout_width="fill_parent"
             android:layout_height="wrap_content">
        <TableRow >
        <TextView
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text="Email"
             android:textSize="11sp"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="25dp"
             android:textColor="@color/black" />
        <TextView
             android:id="@+id/wrong_email"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text=" "
             android:textSize="11sp"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="20dp"
             android:textColor="#DD4B46" />
        </TableRow>    
        </TableLayout>
        	<EditText
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/backwithborder"
            android:inputType="textEmailAddress"
            android:hint=""
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColor="@android:color/black" />
        	

        	<TableLayout android:layout_width="fill_parent"
             android:layout_height="wrap_content">
        <TableRow >
        <TextView
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text="Password"
             android:textSize="11sp"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="25dp"
             android:textColor="@color/black" />
        <TextView
             android:id="@+id/wrong_password"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text=" "
             android:textSize="11sp"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="20dp"
             android:textColor="#DD4B46" />
        </TableRow>    
        </TableLayout>
        	<EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/backwithborder"
            android:inputType="textPassword"
            android:hint=""
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColor="@android:color/black" >
            </EditText>
         <TableLayout android:layout_width="fill_parent"
             android:layout_height="wrap_content">
        <TableRow >
        <TextView
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text="Confirm Password"
             android:textSize="11sp"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="25dp"
             android:textColor="@color/black" />
        <TextView
             android:id="@+id/wrong_cpassword"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text=" "
             android:textSize="11sp"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="20dp"
             android:textColor="#DD4B46" />
        </TableRow>    
        </TableLayout>
         <EditText
            android:id="@+id/c_password"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/backwithborder"
            android:inputType="textPassword"
            android:hint=""
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColor="@android:color/black" >
        	</EditText>
         
